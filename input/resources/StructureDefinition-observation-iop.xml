    </element>
    <element id="Observation.value[x].value">
      <path value="Observation.value[x].value" />
      <min value="1" />
      <mustSupport value="true" />
    </element>
    <element id="Observation.value[x].unit">
      <path value="Observation.value[x].unit" />
      <min value="1" />
      <mustSupport value="true" />
    </element>
